@model IEnumerable<Odev_1_MelikeYilmaz.Models.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


@section Styles{
    <style>
        .btn {
            font-size: 14px;
            padding: 5px 10px;
        }
    </style>
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Orders</h4>
           
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Ship Country</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@(order.OrderDate?.ToString("dd.MM.yyyy") ?? string.Empty)</td>
                                <td>@order.ShipCountry</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

